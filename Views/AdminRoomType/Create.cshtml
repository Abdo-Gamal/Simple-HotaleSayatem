        </div>
    </div>
    <br />
    @if (ViewBag.Massege != null)
    {
        <div class="alert-danger">
            <h3>@ViewBag.Massege</h3>
        </div>
    }
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "AdminRoomtype")
</div>
