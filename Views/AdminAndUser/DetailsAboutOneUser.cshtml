@using HotalManagmentSystem.Models

@{
    ViewBag.Title = "DetailsAboutOneUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<HotalManagmentSystem.Models.RoomAndUser>

<br>
<div class="container wow fadeInUp">
    <div class="row">
        <div class="col-md-12">
            <h3 class="section-title">Details Of Booking Room</h3>
            <div class="section-title-divider"></div>
        </div>
    </div>
</div>

<br />

<table class="table">
    <thead class="table-dark">
        <tr>
            
            <th>reservationDate</th>
            <th>NumberOfDays</th>
            <th>DiedLineOfRoom</th>
            <th>RoomID</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var item in Model)
            {
            <tr>
               
                <td rowspan="@item">@item.reservationDate.ToString("dd-MM-yyyy")</td>
                <td rowspan="@item">@item.NumberOfDays</td>
                <td rowspan="@item">@item.reservationDate.AddDays(item.NumberOfDays).ToString("dd-MM-yyyy")</td>
                <td rowspan="@item">@item.FK_roomId</td>
            </tr>
        }
            </tr>

        </tbody>
</table>

    <a href="/AdminAndUser/ShowUsersDetils" class="btn btn-dark">Back To List</a>&emsp;
    <a href="/AdminAndUser/SearchOfUserData" class="btn btn-dark">Back To Search</a>
