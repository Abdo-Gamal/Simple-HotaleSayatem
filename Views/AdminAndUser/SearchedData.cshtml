@model HotalManagmentSystem.Models.User
@{
    ViewBag.Title = "SearchedData";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br>
<div class="container wow fadeInUp">
    <div class="row">
        <div class="col-md-12">
            <h3 class="section-title">Details</h3>
            <div class="section-title-divider"></div>
        </div>
    </div>
</div>

<br />

<table class="table">
    <thead class="table-dark">
        <tr>
            <th>UserName</th>
            <th>UserNationalID</th>
            <th>UserPhone</th>
            <th>UserBarthDate</th>
            <th>DetailsAboutOneUser</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.UserName</td>
            <td>@Model.UserNationalID</td>
            <td>@Model.UserPhone</td>
            <td>@Model.UserBarthDate.Date.ToString("dd-MM-yyyy")</td>
            <td><p><a href="/AdminAndUser/DetailsAboutOneUser/@Model.UserID" class="btn btn-dark">Details Of Booking Room</a></p></td>

        </tr>

    </tbody>
</table>
